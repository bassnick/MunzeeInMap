@using MunzeeInMap.MunzeeAppObjects
@model System.Collections.Generic.List<MunzeeInMap.MunzeeAppObjects.Clan1610>

@{
    ViewBag.Title = "Klání 16/10";
}
<br />
@Html.RouteLink("Autorizace pro GPX data pro GeoGet", "Autorizace")
<br/>
<strong>Data z oficiálních klanových statistik MHQ. Aktualizováno jednou denně se začátkem munzee dne (tj. půlnoc Texaského času). U nás ráno v 7:00</strong>
<br/>

@foreach (var klan in Model)
{
    Level1610 levelRequirements = new Level1610();

    if (klan.DetailScore.finalLevel == 0)
    { continue; }
    Requirements1610 req = levelRequirements.level[klan.DetailScore.finalLevel];
                
    <article>
        <table class="klan">
            <thead>
                <tr class="popis"><td colspan="3">Klání 16/10 - @klan.ClanName - cíl: level @klan.DetailScore.finalLevel.ToString()</td></tr>
            <tr><th>Hráč</th>@*<th>Deploy body</th><th>Capture body</th><th>Capture On body</th>*@<th>Body</th><th>Aktivitní body</th></tr>
            </thead>
            <tbody>
            @{
                int bodovaniHraci = klan.DetailScore.playerOrder.Count;
                int clanTotalPoints = 0;
                int clanActivityPoints = 0;
                
            }
            @for (int poradi = 0; poradi < bodovaniHraci; poradi++)
            {

                Battle1610 battle = @klan.DetailScore;
                string player = @battle.playerOrder[poradi + 1];
                int tot = (battle.total_points.ContainsKey(player)) ? battle.total_points[player] : 0;
                int ap = (battle.activity_points.ContainsKey(player)) ? battle.activity_points[player] : 0;
                int rest = tot - req.PlayerTotal;
                int restAP = ap - req.PlayerActivity;
                //bool donePlayer = (rest >= 0 && restDeps >= 0);

                clanTotalPoints += tot;
                clanActivityPoints += ap;
                string printOK = ":)";
                <tr>
                    <td><strong>@player</strong></td>
                    <td>@tot
                        @if (rest >= 0)
                        {
                            <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png"/>
                        }
                        else
                        {
                            <span>(<strong>@rest</strong>)</span>
                        }
                        <span> (@((1000*tot)/req.ClanTotal)%;@if (tot < req.ClanTotal/10)
                                                           {
                                                               <span>@(tot - (req.ClanTotal/10))</span>
                                                           })</span>    
                    </td>
                    <td>
                        @ap<span>
                        @if (restAP >= 0)
                        {
                            <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png" />
                        }
                        else
                        {
                            <span>(<strong>@restAP</strong>)</span>
                        }

                        (@((1000*ap)/req.ClanActivity)%;@if (ap < req.ClanActivity/10)
                                                         {
                                                             <span>@(ap - (req.ClanActivity/10))</span>
                                                         })
                    </span>
                    </td>
            </tr>
            }
            </tbody>
            <tfoot>
            @{
                int restClanPoints = clanTotalPoints - req.ClanTotal;
                int restClanAP = clanActivityPoints - req.ClanActivity;
                
                bool doneClan1 = restClanPoints >= 0;
                bool doneClan2 = restClanAP >= 0;
                
            }
            <tr class="popis">
                <td></td>
                <td>@clanTotalPoints.ToString()
                    @if (doneClan1)
                    {
                        <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png"/>
                    }
                    else
                    {
                        <span><strong>(@restClanPoints)</strong></span>
                    }
                </td>
                <td>
                    @clanActivityPoints.ToString()
                    @if (doneClan2)
                    {
                        <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png"/>
                    }
                    else
                    {
                        <span><strong>(@restClanAP)</strong></span>
                    }
                </td>
              </tr>
            </tfoot>
        </table>
    </article>
}
