@using MunzeeInMap.MunzeeAppObjects
@model System.Collections.Generic.List<MunzeeInMap.MunzeeAppObjects.Clan1608>

@{
    ViewBag.Title = "Klání 16/08";
}
<br />
@Html.RouteLink("Autorizace pro GPX data pro GeoGet", "Autorizace")
<br/>
<strong>Data z oficiálních klanových statistik MHQ. Aktualizováno jednou denně se začátkem munzee dne (tj. půlnoc Texaského času). U nás ráno v 7:00</strong>
<br/>

@foreach (var klan in Model)
{
    Level1608 levelRequirements = new Level1608();

    if (klan.DetailScore.finalLevel == 0)
    { continue; }
    Requirements1608 req = levelRequirements.level[klan.DetailScore.finalLevel];
                
    <article>
        <table class="klan">
            <thead>
                <tr class="popis"><td colspan="4">Klání 16/07 - @klan.ClanName - cíl: level @klan.DetailScore.finalLevel.ToString()</td></tr>
            <tr><th>Hráč</th>@*<th>Deploy body</th><th>Capture body</th><th>Capture On body</th>*@<th>Body</th><th>Odlovených klenotů</th><th>Publikovaných klenotů</th></tr>
            </thead>
            <tbody>
            @{
                int bodovaniHraci = klan.DetailScore.playerOrder.Count;
                int clanTotalPoints = 0;
                int clanTotalJC = 0;
                int clanTotalJD = 0;
            }
            @for (int poradi = 0; poradi < bodovaniHraci; poradi++)
            {

                Battle1608 battle = @klan.DetailScore;
                string player = @battle.playerOrder[poradi + 1];
                int tot = (battle.total_points.ContainsKey(player)) ? battle.total_points[player] : 0;
                int jc = (battle.total_JC.ContainsKey(player)) ? battle.total_JC[player] : 0;
                int jd = (battle.total_JD.ContainsKey(player)) ? battle.total_JD[player] : 0;

                int rest = tot - req.PlayerPts;
                bool donePlayer = rest >= 0;
                clanTotalPoints += tot;
                clanTotalJC += jc;
                clanTotalJD += jd;

                string printOK = ":)";
                <tr>
                    <td><strong>@player</strong></td>
                    <td>@tot
                        @if (donePlayer)
                        {
                            <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png"/>
                        }
                        else
                        {
                            <span>(<strong>@rest</strong>)</span>
                        }
                        <span> (@((1000*tot)/req.ClanPts)%;@if (tot < req.ClanPts/10)
                                                           {
                                                               <span>@(tot - (req.ClanPts/10))</span>
                                                           })</span>    
                    </td>
                    <td>@jc<span>
                            (@((1000 * jc) / req.ClanJewelCaps)%;@if (jc < req.ClanJewelCaps / 10)
                            {
                                <span>@(jc- (req.ClanJewelCaps / 10))</span>
                            })
                        </span>    
                    </td>
                    <td>
                        @jd<span>
                        (@((1000 * jd) / req.ClanJewelDeploys)%;@if (jd < req.ClanJewelDeploys / 10)
                        {
                            <span>@(jd - (req.ClanJewelDeploys / 10))</span>
                        })
                    </span>
                </td>
            </tr>
            }
            </tbody>
            <tfoot>
            @{
                int restClanPoints = clanTotalPoints - req.ClanPts;
                int restClanJC = clanTotalJC - req.ClanJewelCaps;
                int restClanJD = clanTotalJD - req.ClanJewelDeploys;

                bool doneClan1 = restClanPoints >= 0;
                bool doneClan2 = restClanJC >= 0;
                bool doneClan3 = restClanJD >= 0;
            }
            <tr class="popis">
                <td></td>
                <td>@clanTotalPoints.ToString()
                    @if (doneClan1)
                    {
                        <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png"/>
                    }
                    else
                    {
                        <span><strong>(@restClanPoints)</strong></span>
                    }
                </td>
                <td>
                    @clanTotalJC.ToString()
                @if (doneClan2)
                {
                    <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png" />
                }
                else
                {
                    <span><strong>(@restClanJC)</strong></span>
                }
            </td>

                <td>
                    @clanTotalJD.ToString()
                @if (doneClan3)
                {
                    <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png" />
                }
                else
                {
                    <span><strong>(@restClanJD)</strong></span>
                }
            </td>
                </tr>
            </tfoot>
        </table>
    </article>
}
