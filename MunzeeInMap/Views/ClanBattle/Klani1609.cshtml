@using MunzeeInMap.MunzeeAppObjects
@model System.Collections.Generic.List<MunzeeInMap.MunzeeAppObjects.Clan1609>

@{
    ViewBag.Title = "Klání 16/09";
}
<br />
@Html.RouteLink("Autorizace pro GPX data pro GeoGet", "Autorizace")
<br/>
<strong>Data z oficiálních klanových statistik MHQ. Aktualizováno jednou denně se začátkem munzee dne (tj. půlnoc Texaského času). U nás ráno v 7:00</strong>
<br/>

@foreach (var klan in Model)
{
    Level1609 levelRequirements = new Level1609();

    if (klan.DetailScore.finalLevel == 0)
    { continue; }
    Requirements1609 req = levelRequirements.level[klan.DetailScore.finalLevel];
                
    <article>
        <table class="klan">
            <thead>
                <tr class="popis"><td colspan="4">Klání 16/09 - @klan.ClanName - cíl: level @klan.DetailScore.finalLevel.ToString()</td></tr>
            <tr><th>Hráč</th>@*<th>Deploy body</th><th>Capture body</th><th>Capture On body</th>*@<th>Body</th><th>Deploy</th><th>Capture</th></tr>
            </thead>
            <tbody>
            @{
                int bodovaniHraci = klan.DetailScore.playerOrder.Count;
                int clanTotalPoints = 0;
                int clanTotalCaps = 0;
                int clanTotalDeps = 0;
            }
            @for (int poradi = 0; poradi < bodovaniHraci; poradi++)
            {

                Battle1609 battle = @klan.DetailScore;
                string player = @battle.playerOrder[poradi + 1];
                int tot = (battle.total_points.ContainsKey(player)) ? battle.total_points[player] : 0;
                int caps = (battle.total_Caps.ContainsKey(player)) ? battle.total_Caps[player] : 0;
                int deps = (battle.total_Deploys.ContainsKey(player)) ? battle.total_Deploys[player] : 0;

                int rest = tot - req.PlayerPts;
                int restDeps = deps - req.PlayerDeploys;
                //bool donePlayer = (rest >= 0 && restDeps >= 0);
                clanTotalPoints += tot;
                clanTotalCaps += caps;
                clanTotalDeps += deps;

                string printOK = ":)";
                <tr>
                    <td><strong>@player</strong></td>
                    <td>@tot
                        @if (rest >= 0)
                        {
                            <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png"/>
                        }
                        else
                        {
                            <span>(<strong>@rest</strong>)</span>
                        }
                        <span> (@((1000*tot)/req.ClanPts)%;@if (tot < req.ClanPts/10)
                                                           {
                                                               <span>@(tot - (req.ClanPts/10))</span>
                                                           })</span>    
                    </td>
                    <td>
                        @deps<span>
                        @if (restDeps >= 0)
                        {
                            <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png" />
                        }
                        else
                        {
                            <span>(<strong>@restDeps</strong>)</span>
                        }

                        (@((1000*deps)/req.ClanDeploys)%;@if (deps < req.ClanDeploys/10)
                                                         {
                                                             <span>@(deps - (req.ClanDeploys/10))</span>
                                                         })
                    </span>
                    </td>
                    <td>
                        @caps<span>
                        (@((1000 * caps) / req.ClanCaps)%;@if (caps < req.ClanCaps / 10)
                        {
                            <span>@(caps - (req.ClanCaps / 10))</span>
                        })
                    </span>
                    </td>
            </tr>
            }
            </tbody>
            <tfoot>
            @{
                int restClanPoints = clanTotalPoints - req.ClanPts;
                int restClanCaps = clanTotalCaps - req.ClanCaps;
                int restClanDeps = clanTotalDeps - req.ClanDeploys;

                bool doneClan1 = restClanPoints >= 0;
                bool doneClan2 = restClanCaps >= 0;
                bool doneClan3 = restClanDeps >= 0;
            }
            <tr class="popis">
                <td></td>
                <td>@clanTotalPoints.ToString()
                    @if (doneClan1)
                    {
                        <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png"/>
                    }
                    else
                    {
                        <span><strong>(@restClanPoints)</strong></span>
                    }
                </td>
                <td>
                    @clanTotalDeps.ToString()
                    @if (doneClan3)
                    {
                        <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png"/>
                    }
                    else
                    {
                        <span><strong>(@restClanDeps)</strong></span>
                    }
                </td>
                <td>
                    @clanTotalCaps.ToString()
                    @if (doneClan2)
                {
                        <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png" />
                    }
                    else
                    {
                        <span><strong>(@restClanCaps)</strong></span>
                    }
                </td>

                </tr>
            </tfoot>
        </table>
    </article>
}
