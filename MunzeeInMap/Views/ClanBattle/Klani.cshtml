@using MunzeeInMap.MunzeeAppObjects
@model System.Collections.Generic.List<MunzeeInMap.MunzeeAppObjects.Clan1705>

@{
    ViewBag.Title = "Klání 17/04";
}
<br />
@Html.RouteLink("Autorizace pro GPX data pro GeoGet", "Autorizace")
<br/>
<strong>Data z oficiálních klanových statistik MHQ. Aktualizováno jednou denně se začátkem munzee dne (tj. půlnoc Texaského času). U nás ráno v 7:00</strong>
<br/>
@if (DateTime.Now > new DateTime(2017, 6, 3, 6, 59, 59))
{
    <div>Funkcionalita pro aktuální klání nebyla ještě naprogramována.</div>
}
else
{
    foreach (var klan in Model)
    {
        Level1705 levelRequirements = new Level1705();

        if (klan.DetailScore.finalLevel == 0)
        {
            continue;
        }
        Requirements1705 req = levelRequirements.level[klan.DetailScore.finalLevel];

        <article>
            <table class="klan">
                <thead>
                <tr class="popis"><td colspan="3">Klání 17/05 - @klan.ClanName - cíl: level @klan.DetailScore.finalLevel.ToString()</td></tr>
                <tr><th>Hráč</th><th>Bodů za aktivitu</th><th>Celkově bodů</th></tr>
                </thead>
                <tbody>
                @{
                    int clanTot = 0;
                    int clanAP = 0;
                }
                @for (int poradi = 1; poradi <= 10; poradi++)
                {
                    
                    Battle1705 battle = @klan.DetailScore;
                    string player = battle.playerOrder[poradi];
                    int ap = battle.activity_points[player];
                    int tot = battle.total_points[player];

                    bool donePlayerAP = ap >= req.PlayerActivityPoints;
                    int restPlayerAP = req.PlayerActivityPoints - ap;
                    int percentagePlayerAP = (ap*100*10)/req.ClanActivityPoints;
                    int percentagePlayerTot = (tot * 100 * 10) / req.ClanTotalPoints;

                    int restOptimumPlayerAP = req.ClanActivityPoints / 10 - ap;
                    int restOptimumPlayerTot = req.ClanTotalPoints / 10 - tot;
                    
                    clanTot += tot;
                    clanAP += ap;

                    string printOK = ":)";
                    <tr>
                        <td><strong>@player</strong></td>
                        <td>@ap
                            @if (donePlayerAP)
                            {
                                <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png"/>
                            }
                            else
                            {
                                <span>(<strong>@(-restPlayerAP)</strong>)</span>
                            }
                            <span>
                                (@percentagePlayerAP%;
                                @if (percentagePlayerAP < 100)
                                {
                                    <span>@(-restOptimumPlayerAP)</span>
                                }
                                )
                            </span>
                        </td>
                        <td>
                            @tot
                            
                            <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png"/>
                            <span>
                                (@percentagePlayerTot%;
                                @if (percentagePlayerTot < 100)
                                {
                                    <span>@(-restOptimumPlayerTot)</span>
                                }
                                )
                            </span>
                        </td>
                    </tr>
                }
                </tbody>
                <tfoot>
                @{
                    bool doneClanAP = clanAP >= req.ClanActivityPoints;
                    bool doneClanTots = clanTot >= req.ClanTotalPoints;
                    int restClanAP = req.ClanActivityPoints - clanAP;
                    int restClanTots = req.ClanTotalPoints - clanTot;
                }
                <tr class="popis">
                    <td></td>
                    <td>@clanAP.ToString()
                        @if (doneClanAP)
                        {
                            <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png"/>
                        }
                        else
                        {
                            <span><strong>(@(-restClanAP))</strong></span>
                        }</td>
                    <td>
                        @clanTot.ToString()
                    @if (doneClanTots)
                    {
                        <img class="fajfka" alt=":)" src="~/Content/zelena_fajfka-2.png" />
                    }
                    else
                    {
                        <span><strong>(@(-restClanTots))</strong></span>
                    }
                </td>
                </tr>
                </tfoot>
            </table>
        </article>
    }
}